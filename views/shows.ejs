<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
</head>
<body>
 
<h2>Registros</h2>
  <table border="1">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Sobrenome</td>
            <td>Telefone</td>
            <td>Idade</td>
            <td>Cidade</td>
            <td>Genero</td>
            <td>CPF</td>
            <td>RG</td>
            <td>Data de Nascimento</td>
            <td>Numero da casa</td>
            <td>Ação</td>
        </tr>
    </thead>
    <tbody>
    <% data.forEach(function(details) { %>
        <tr>
            <td><%= details.name %></td>
            <td><%= details.surname %></td>
            <td><%= details.telefone %></td>
            <td><%= details.idade %></td>
            <td><%= details.cidade %></td>
            <td><%= details.genero %></td>
            <td><%= details.cpf %></td>
            <td><%= details.rg %></td>
            <td><%= details.datanascimento %></td>
            <td><%= details.numerodacasa %></td>
            <td><a href="/edit/<%= details._id %>">Editar</a> - <a href="/delete/<%= details._id %>">Deletar</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <button><a href="/">Novo</a></button>
</body>
</html>